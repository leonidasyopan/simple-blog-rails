<h1>Blog Posts</h1>

<% @posts.each do |post| %>
  <div class="card card-body bg-light mt-4">
    <h3 class="card-title"><%= post.title %></h3>
    <p class="card-text"><%= post.body %></p>
    <div class="card-footer">
      <%= link_to "Read more", post_path(post), :class => 'btn btn-default' %>
    </div>    
  </div>
<% end %>